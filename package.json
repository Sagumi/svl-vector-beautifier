{
  "name": "svl-vector-beautifier",
  "displayName": "SVL Vector Beautifier",
  "description": "Transform those one-line vectors to multi-line to make them more human readable",
  "version": "0.0.1",
  "author": {
    "name": "Cl√©ment Rochon"
  },
  "repository": {
    "url": "https://github.com/Sagumi/svl-vector-beautifier"
  },
  "icon": "img/vector-beautifier-gray.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "type": "commonjs",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "SVL Vector Beautifier",
      "properties": {
        "svlVectorBeautifier.indentationCharacter": {
          "type": "string",
          "enum": [
            "spaces",
            "tabs"
          ],
          "description": "Use tabs or spaces to indent. Keep in mind that VS Code can automatically replace tabs with spaces",
          "default": "spaces",
          "order": 1
        },
        "svlVectorBeautifier.indentationIncrement": {
          "type": "number",
          "description": "Number of indentation character to use for each indentation level",
          "default": 2,
          "order": 2
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == plaintext || resourceFilename =~ /.*\\.svl/",
          "command": "svl-vector-beautifier.beautify",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "title": "Beautify Vector",
        "command": "svl-vector-beautifier.beautify",
        "icon": "$(bracket-dot)"
      }
    ],
    "keybindings": [
      {
        "command": "svl-vector-beautifier.beautify",
        "key": "shift+alt+f",
        "mac": "shift+cmd+f"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run test && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "test": "jest . --verbose"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "babel-jest": "^30.0.5",
    "eslint": "^9.25.1",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}